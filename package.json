{
  "name": "@cleverjs/condition-builder",
  "version": "1.0.2",
  "description": "A builder to create nested JSON representing SQL where conditions",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/src/index.js",
      "import": "./dist/src/index.js",
      "default": "./dist/src/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/**/*"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cleverJS/condition-builder.git"
  },
  "scripts": {
    "build": "swc ./src -C module.type=commonjs -d ./dist && tsc -p tsconfig.build.json --emitDeclarationOnly",
    "prebuild": "pnpm clean",
    "clean": "rm -rf dist tsconfig.build.tsbuildinfo",
    "prepublishOnly": "npm run build",
    "tests": "vitest --config vitest.config.ts",
    "test-coverage": "vitest run --coverage --config vitest.config.ts"
  },
  "keywords": [],
  "author": "",
  "license": "Commercial",
  "type": "commonjs",
  "peerDependencies": {
    "knex": ">=3.0.0",
    "@mikro-orm/core": ">=6.0.0"
  },
  "peerDependenciesMeta": {
    "knex": {
      "optional": true
    },
    "@mikro-orm/core": {
      "optional": true
    }
  },
  "devDependencies": {
    "globals": "^17.0.0",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@swc/cli": "^0.7.9",
    "@swc/core": "^1.15.8",
    "@trivago/prettier-plugin-sort-imports": "^6.0.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.18.13",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "better-sqlite3": "^12.5.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "knex": "^3.1.0",
    "@mikro-orm/core": "^6.6.3",
    "prettier": "^3.7.4",
    "source-map-support": "^0.5.21",
    "supertest": "^7.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0",
    "unplugin-swc": "^1.5.9",
    "vite-tsconfig-paths": "^6.0.3",
    "vitest": "^4.0.16"
  }
}
